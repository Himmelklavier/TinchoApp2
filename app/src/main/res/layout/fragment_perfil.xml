<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.fragments.PerfilFragment">

    <!--Encabezado de la carta-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/tincho_logo">
    </RelativeLayout>

    <ImageView
        android:id="@+id/fotoperfil"
        android:layout_width="203dp"
        android:layout_height="194dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="170dp"
        android:src="@drawable/foto_100_kb"/>


    <Button
        android:id="@+id/btncamara"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="380dp"
        android:background="@color/secondarylightcolor"
        android:text="Camara"
        android:textColor="@color/primarytextcolor"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btngaleria"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="380dp"
        android:background="@color/secondarycolor"
        android:text="Galeria"
        android:textColor="@color/primarytextcolor"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="450dp"
        android:text="Nombre Completo"
        android:textColor="@color/secondarytextcolor"
        android:textSize="23dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nombrecompleto"
        android:layout_width="246dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/stylo_borde_editext"
        android:editable="false"
        android:inputType="none"
        android:text="Martina Mella Talero"
        android:textIsSelectable="false" />

    <ImageButton
        android:id="@+id/nombreedit"
        android:layout_width="47dp"
        android:layout_height="45dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="480dp"
        android:background="@color/secondarylightcolor"
        android:src="@drawable/ic_baseline_edit_24" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="540dp"
        android:text="Email"
        android:textColor="@color/secondarytextcolor"
        android:textSize="23dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/correoelectronico"
        android:layout_width="246dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="570dp"
        android:background="@drawable/stylo_borde_editext"
        android:fontFamily="sans-serif-light"
        android:inputType="none"
        android:text="martina@gmail.com"
        android:textIsSelectable="false" />

    <ImageButton
        android:id="@+id/correoedit"
        android:layout_width="47dp"
        android:layout_height="50dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="570dp"
        android:background="@color/secondarylightcolor"
        android:src="@drawable/ic_baseline_edit_24" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="630dp"
        android:text="Celular"
        android:textColor="@color/secondarytextcolor"
        android:textSize="23dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/celularcompleto"
        android:layout_width="247dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="660dp"
        android:background="@drawable/stylo_borde_editext"
        android:fontFamily="sans-serif-light"
        android:inputType="none"
        android:text="+57 301 456 6655"
        android:textIsSelectable="false" />

    <ImageButton
        android:id="@+id/celularedit"
        android:layout_width="47dp"
        android:layout_height="50dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="660dp"
        android:background="@color/secondarylightcolor"
        android:src="@drawable/ic_baseline_edit_24" />


</FrameLayout>